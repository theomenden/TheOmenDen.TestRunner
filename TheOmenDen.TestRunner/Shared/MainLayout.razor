@inherits LayoutComponentBase

<Layout Sider>
    <LayoutSider>
        <LayoutSiderContent>
            <Bar Mode="BarMode.VerticalInline"
                 CollapseMode="BarCollapseMode.Small"
                 Breakpoint="Breakpoint.Desktop"
                 NavigationBreakpoint="Breakpoint.Tablet"
                 ThemeContrast="ThemeContrast.Dark"
                 Border="Border.Is2.Light.OnEnd.Is0.OnBottom.Is0.OnTop.Is0.OnStart.Is0">
                <BarToggler />
                <BarBrand>
                    <BarItem>
                        <BarLink To="#">
                            <BarIcon IconName="IconName.Dashboard" />
                            <Small>Test Runner</Small>
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarMenu>
                    <BarStart>
                        <BarItem>
                            <BarLink To="#home">
                                <BarIcon IconName="IconName.Home" />
                                Home
                            </BarLink>
                        </BarItem>
                        <BarItem>
                            <BarLink To="#docs">Documentation</BarLink>
                        </BarItem>
                        <BarItem>
                            <BarDropdown>
                                <BarDropdownToggle>
                                    <BarIcon IconName="IconName.Edit" />
                                    Dropdown
                                </BarDropdownToggle>
                                <BarDropdownMenu>
                                    <BarDropdownItem>Action</BarDropdownItem>
                                    <BarDropdownItem>Another action</BarDropdownItem>
                                </BarDropdownMenu>
                            </BarDropdown>
                        </BarItem>
                    </BarStart>
                </BarMenu>
            </Bar>
        </LayoutSiderContent>
    </LayoutSider>
    <Layout>
        <LayoutHeader Fixed>
            <TestRunnerHeader />
        </LayoutHeader>
        <LayoutContent Margin="Margin.Is4.OnX">
            @Body
        </LayoutContent>
        <LayoutFooter>
            <TestRunnerFooter />
        </LayoutFooter>
    </Layout>
</Layout>